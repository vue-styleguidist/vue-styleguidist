{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"rsg-components/*": [
				"packages/vue-styleguidist/src/client/rsg-components/*",
				"packages/vue-styleguidist/node_modules/react-styleguidist/lib/client/rsg-components/*"
			]
		},
		"strictFunctionTypes": false,
		"jsx": "react",
		"resolveJsonModule": true
	},
	"include": [
		"@types/**/*",
		"packages/**/*.ts",
		"packages/**/*.tsx",
		"test/**/*.ts",
		"node_modules/react-styleguidist/lib/client/rsg-components/**/*.*"
	],
	"exclude": ["test/**/*.d.ts"]
}
