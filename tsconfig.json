{
	"compilerOptions": {
		"target": "es6",
		"lib": ["es2021", "DOM"],
		"module": "commonjs",
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"baseUrl": ".",
		"paths": {
			"rsg-components/*": [
				"packages/vue-styleguidist/src/client/rsg-components/*",
				"packages/vue-styleguidist/node_modules/react-styleguidist/lib/client/rsg-components/*"
			]
		},
		"strictFunctionTypes": false,
		"jsx": "react",
		"resolveJsonModule": true,
		"types": ["vitest/globals"]
	},
	"include": [
		"@types/**/*",
		"packages/**/*.ts",
		"packages/**/*.tsx",
		"node_modules/react-styleguidist/lib/client/rsg-components/**/*.*"
	],
	"exclude": ["test/**/*.d.ts", "**/*.cy.*", "test/cypress/**/*.ts"],
	"references": [
		{
			"path": "./tsconfig.cy.json"
		},
		{
			"path": "./tsconfig.testSetup.json"
		}
	]
}
