{
	"compilerOptions": {
		"target": "es6",
		"lib": ["es2021", "DOM"],
		"module": "commonjs",
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"strictFunctionTypes": false,
		"jsx": "react",
		"resolveJsonModule": true,
		"types": ["vitest/globals"]
	},
	"include": [
		"test/**/*.ts",
		"node_modules/react-styleguidist/lib/client/rsg-components/**/*.*"
	],
	"exclude": ["test/**/*.d.ts", "**/*.cy.*", "test/cypress/**/*.ts"],
	"references": [
		{
			"path": "./tsconfig.cy.json"
		},
		{
			"path": "./packages/vue-docgen-cli/tsconfig.json"
		},
		{
			"path": "./packages/vue-styleguidist/tsconfig.json"
		}
	]
}
